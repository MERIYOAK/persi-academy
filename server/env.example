# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/persi-academy

# =============================================================================
# STRIPE PAYMENT CONFIGURATION (TEST MODE)
# =============================================================================
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# CLIENT URL CONFIGURATION
# =============================================================================
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173
API_BASE_URL=http://localhost:5000

# =============================================================================
# PRODUCTION CLIENT URL CONFIGURATION
# =============================================================================
# CLIENT_URL=https://www.qendiel.com
# FRONTEND_URL=https://www.qendiel.com
# API_BASE_URL=https://persi-academy.onrender.com

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=QENDIEL Academy
APP_DESCRIPTION=Master YouTube Success
APP_VERSION=1.0.0

# =============================================================================
# S3 BUCKET CONFIGURATION
# =============================================================================
S3_BUCKET_URL=https://persi-educational-storage.s3.ca-central-1.amazonaws.com
S3_IMAGE_PATH=/persi-academy/Ig-images/ig-image.jpeg

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# =============================================================================
# WHATSAPP GROUP CONFIGURATION
# =============================================================================
# Temporary link expiration time (in minutes) - links expire after use
WHATSAPP_TEMP_LINK_EXPIRY_MINUTES=30
# Default WhatsApp group link (can be overridden per course)
DEFAULT_WHATSAPP_GROUP_LINK=https://chat.whatsapp.com/your_default_group_link

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_SECRET=your_session_secret_key_here

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# For Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=your_email@gmail.com

# Support and Contact Email
SUPPORT_EMAIL=support@qendiel.com

# =============================================================================
# AWS S3 CONFIGURATION (OPTIONAL)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=ca-central-1
AWS_S3_BUCKET=persi-educational-storage

# =============================================================================
# S3 BUCKET CONFIGURATION (ENVIRONMENT-SPECIFIC)
# =============================================================================
# Development: persi-edu-platform (us-east-1)
# Production: persi-educational-storage (ca-central-1)
S3_BUCKET=persi-educational-storage
S3_REGION=ca-central-1

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (OPTIONAL)
# =============================================================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable detailed logging
DEBUG=true

